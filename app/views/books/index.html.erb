<!DOCTYPE html>

<html>
    
    <div>
  <%= flash[:notice] %>
</div>
  <h1>Books</h1>
      
 
 <table>
   <tr>
     <th>Title</th>
     <th>Body</th>
   </tr>
</table>
<% @books.each do |book| %>
   <div>
 <table>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Show", "/books/#{book.id}" %></td>
       <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
     </tr>
 </table>
  </div>
 <% end %>

  <h2>New book</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors occurred.
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  
  <%= form_with model: @book do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
   <div class="create">
  <%= f.submit 'Create Book' %>
  <% end %>
  </div>
  </html>
  
  