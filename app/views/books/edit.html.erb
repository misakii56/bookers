<h1>Editing Book</h1>
 <% if @book.errors.any? %>
  <%= @book.errors.count %> errors occurred.
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
 
 <%= f.submit 'Update Book' %>
 
 <% end %>
 
 <div class="contents">
  <div class="item">
   <p><%= link_to "Show", "/books/#{@book.id}" %></p>
  </div>
  <div class="item">
   <p><%= link_to "Back", "/books" %></p>
  </div>
 </div>
